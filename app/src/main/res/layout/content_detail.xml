<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Detail_Activity"
    tools:showIn="@layout/activity_detail_"
    android:padding="16dp"
    >

    <LinearLayout
        android:id="@+id/layout_showImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_showImage"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ชื่อ:"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Edit_Name"
                style="@android:style/Widget.DeviceDefault.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="ชื่อ"
                android:inputType="textPersonName"
                android:textSize="16dp"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ลักษณะ:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/Edit_Detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_margin="8dp"
                android:gravity="left|top"
                android:hint="ลักษณะ"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="5"></EditText>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="สถานที่:"
                android:textSize="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ShowLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textSize="16dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/ChangeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="เปลี่ยน" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="ละจิจูด"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/Latitude"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="16dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="ลองจิจูด"
                    android:textSize="16dp"

                    />

                <TextView
                    android:id="@+id/Longtitude"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="16dp"

                    />


            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ตำเเหน่ง:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/Edit_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_margin="8dp"
                android:gravity="left|top"
                android:hint="ตำเเหน่ง"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="2"></EditText>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ปีที่สร้าง(พ.ศ.):"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Edit_Age"
                style="@android:style/Widget.DeviceDefault.EditText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="พ,ศ."
                android:inputType="number"
                android:textSize="16dp"

                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ขนาด:"
                android:textSize="16dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/Edit_Width"
                    style="@android:style/Widget.DeviceDefault.EditText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="กว้าง(ซ.ม.)"
                    android:inputType="number"
                    android:textSize="16dp"

                    />
                <EditText
                    android:id="@+id/Edit_Height"
                    style="@android:style/Widget.DeviceDefault.EditText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="ยาว(ซ.ม.)"
                    android:inputType="number"
                    android:textSize="16dp"

                    />


            </LinearLayout>

            <TextView

                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="หมายเหตุ:" />

            <EditText
                android:id="@+id/Edit_ETC"
                style="@android:style/Widget.DeviceDefault.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="หมายเหตุ"
                android:inputType="textPersonName"
                android:textSize="16dp"

                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>