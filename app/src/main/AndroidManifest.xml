<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutta.imagefilter">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Filter"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen"
            ></activity>
        <activity
            android:name=".ShowActivity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen"></activity>
        <activity
            android:name=".Main_Menu"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Detail_Activity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen"></activity>
        <activity
            android:name=".PageMyMural"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
        <activity
            android:name=".PageAllMural"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
        <activity
            android:name=".PageFliter"
            android:theme="@style/AppTheme.NoActionBar.Fullscreen" />
    </application>

</manifest>